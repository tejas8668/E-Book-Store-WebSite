{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "50mb",
                "installCommand": "pip install -r requirements.txt && PLAYWRIGHT_BROWSERS_PATH=$HOME/cache/ms-playwright playwright install chromium --with-deps"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "main.py",
            "methods": ["GET", "POST", "OPTIONS"],
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "Content-Type"
            }
        },
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0",
        "PLAYWRIGHT_BROWSERS_PATH": "/tmp"
    },
    "regions": ["bom1"]
} 