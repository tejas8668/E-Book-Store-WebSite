{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "installCommand": "pip install -r requirements.txt && playwright install chromium --with-deps",
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "main.py",
            "methods": ["GET", "POST", "OPTIONS"],
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "Content-Type"
            }
        },
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
    },
    "regions": ["bom1"],
    "functions": {
        "main.py": {
            "memory": 2048,
            "maxDuration": 60
        }
    }
} 